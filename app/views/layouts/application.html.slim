doctype 5
html
  head
    title = full_title(yield :title)
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    == render 'layouts/shim'
  body
    == render 'layouts/header'
    .container-fluid
      .row-fluid
        .span9
          .main
            == render 'shared/flash', flash: flash
            = yield
        .span3.offset.9
          .sidebar
            == render 'layouts/sidebar'
